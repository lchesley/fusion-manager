@model IEnumerable<FusionManager.Models.Persona>

@{
    ViewBag.Title = "Persona Listing";
}

<div class="card-deck-wrapper">
    <div class="card-deck">
        @foreach (var item in Model)
        {
            <div class="card card-block">
                
                <h4 class="card-title">@Html.DisplayFor(modelItem => item.Name)</h4>
            
                <p class="card-text">
                    @Html.DisplayFor(modelItem => item.InitialLevel)

                @Html.DisplayFor(modelItem => item.HPIncrease)

                @Html.DisplayFor(modelItem => item.SPIncrease)

                @Html.DisplayFor(modelItem => item.IsDownloadedContent)
                </p>
            
                @Html.DisplayFor(modelItem => item.SkillsList)
            
                @Html.DisplayFor(modelItem => item.ActualLevel)
            
                @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })            
            </div>
        }
    </div>
</div>




