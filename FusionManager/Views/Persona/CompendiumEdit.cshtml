@model FusionManager.Models.CompendiumEntryModel

@{
    ViewBag.Title = "Compendium Edit";
}

<h2>Compendium Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>@Model.Entry.PersonaName</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })                

        @if (String.IsNullOrEmpty(Model.Entry.PersonaName))
        {
            <div class="form-group">
                @Html.LabelFor(model => model.Entry.PersonaName, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.Entry.PersonaName, Model.PersonaNames as IEnumerable<SelectListItem>, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Entry.PersonaName, "", new { @class = "text-danger" })
                </div>
            </div>
        }
        else
        {
            @Html.HiddenFor(model => model.Entry.PersonaName)
        }

        <div class="form-group">
            @Html.LabelFor(model => model.Entry.ActualLevel, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Entry.ActualLevel, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Entry.ActualLevel, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.InheritedSkills, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.InheritedSkills, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.InheritedSkills, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to Compendium", "CompendiumIndex")
</div>
